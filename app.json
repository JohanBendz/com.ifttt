{
	"id": "com.ifttt",
	"version": "2.1.1",
	"compatibility": ">=0.10.1",
	"category": "internet",
	"name": {
		"en": "IFTTT",
		"nl": "IFTTT"
	},
	"description": {
		"en": "Connect your Homey to IFTTT",
		"nl": "Verbind je Homey met IFTTT"
	},
	"author": {
		"name": "Athom B.V."
	},
	"images": {
		"small": "assets/images/small.png",
		"large": "assets/images/large.png"
	},
	"permissions": [
		"homey:manager:speech-output"
	],
	"flow": {
		"triggers": [
			{
				"id": "ifttt_event",
				"title": {
					"en": "On IFTTT event",
					"nl": "Als IFTTT triggered"
				},
				"tokens": [
					{
						"name": "var1",
						"title": {
							"en": "var 1"
						},
						"example": {
							"en": "5"
						}
					},
					{
						"name": "var2",
						"title": {
							"en": "var 2"
						},
						"example": {
							"en": "5"
						}
					},
					{
						"name": "var3",
						"title": {
							"en": "var 3"
						},
						"example": {
							"en": "5"
						}
					}
				],
				"args": [
					{
						"name": "event",
						"type": "text",
						"placeholder": {
							"en": "Event name",
							"nl": "Event naam"
						}
					}
				]
			}
		],
		"actions": [
			{
				"id": "trigger_ifttt",
				"title": {
					"en": "Trigger IFTTT event",
					"nl": "Trigger IFTTT actie"
				},
				"args": [
					{
						"name": "event",
						"type": "text",
						"placeholder": {
							"en": "Event name",
							"nl": "Event naam"
						}
					},
					{
						"name": "data",
						"type": "text",
						"placeholder": {
							"en": "Data",
							"nl": "Data"
						}
					}
				]
			}
		]
	}
}