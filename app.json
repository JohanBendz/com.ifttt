{
  "id": "com.ifttt",
  "version": "2.0.0",
  "compatibility": ">=0.8.30",
  "category": "internet",
  "name": {
    "en": "IFTTT",
    "nl": "IFTTT"
  },
  "description": {
    "en": "Connect your Homey to IFTTT",
    "nl": "Verbind je Homey met IFTTT"
  },
  "author": {
    "name": "Athom B.V."
  },
  "images": {
    "small": "assets/images/small.png",
    "large": "assets/images/large.png"
  },
  "permissions": [
    "homey:manager:speech-output"
  ],
  "speech": [
  ],
  "flow": {
    "triggers": [
      {
        "id": "ifttt_event",
        "title": {
          "en": "On IFTTT event",
          "nl": "Als IFTTT triggered"
        },
        "args": [
          {
            "name": "event",
            "type": "text",
            "placeholder": {
              "en": "Event name",
              "nl": "Event naam"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "trigger_ifttt",
        "title": {
          "en": "Trigger IFTTT event",
          "nl": "Trigger IFTTT actie"
        },
        "args": [
          {
            "name": "event",
            "type": "text",
            "placeholder": {
              "en": "Event name",
              "nl": "Event naam"
            }
          }
        ]
      }
    ]
  }
}